<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/barcelona"
    tools:context="com.example.ironm.e_map.AddEvent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:id="@+id/sclView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:id="@+id/topNewEvent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:text="Add New Event"
                android:background="#000000"
                android:gravity="center"
                android:textSize="25dp"
                android:id="@+id/lblNew"/>

            <EditText
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:id="@+id/txtTitle"
                android:layout_marginTop="5dp"
                android:background="@color/login"
                android:inputType="text"
                android:layout_gravity="center"
                android:hint="Event Title"
                android:textAlignment="center"
                android:layout_below="@+id/lblNew"/>

            <EditText
                android:layout_width="280dp"
                android:layout_height="100dp"
                android:id="@+id/txtDescription"
                android:layout_marginTop="5dp"
                android:background="@color/login"
                android:inputType="textMultiLine"
                android:layout_gravity="center"
                android:gravity="top"
                android:textAlignment="center"
                android:hint="Event Description"
                android:layout_below="@+id/txtTitle"/>

            <Button
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_below="@+id/txtDescription"
                android:id="@+id/txtDate"
                android:layout_marginTop="5dp"
                android:background="@color/login"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:hint="Date"/>

            <Button
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_below="@+id/txtDate"
                android:id="@+id/txtStart"
                android:layout_marginTop="5dp"
                android:background="@color/login"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:hint="Start Time"/>

            <Button
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_below="@+id/txtStart"
                android:id="@+id/txtEnd"
                android:layout_marginTop="5dp"
                android:background="@color/login"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:hint="End Time"/>

            <Button
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:id="@+id/txtLocationx"
                android:layout_marginTop="5dp"
                android:background="@color/login"
                android:inputType="text"
                android:layout_gravity="center"
                android:hint="Location"
                android:textAlignment="center"
                android:layout_below="@+id/txtEnd"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_below="@+id/sclView"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/back_icon"
            android:id="@+id/btnBackHome"/>

        <Button
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:background="#000"
            android:layout_marginLeft="10dp"
            android:text="Save Event"
            android:textSize="15dp"
            android:id="@+id/btnSaveEvent" />
    </LinearLayout>

</RelativeLayout>
