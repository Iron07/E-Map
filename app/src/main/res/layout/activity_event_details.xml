<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_event_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/barcelona"
    tools:context="com.example.ironm.e_map.EventDetails">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/back_icon"
        android:id="@+id/btnBackEvents"/>
    <TextView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="Add New Event"
        android:layout_gravity="center"
        android:background="#000000"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:id="@+id/lblTitle"/>

    <EditText
        android:layout_width="280dp"
        android:layout_height="100dp"
        android:id="@+id/lblDescription"
        android:layout_marginTop="10dp"
        android:background="@color/login"
        android:inputType="textMultiLine"
        android:textColor="#ffffff"
        android:enabled="false"
        android:layout_gravity="center"
        android:gravity="top"
        android:textAlignment="center"
        android:layout_below="@+id/lblTitle" />

    <EditText
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_below="@+id/lblDescription"
        android:enabled="false"
        android:id="@+id/lblDate"
        android:layout_marginTop="10dp"
        android:background="@color/login"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:hint="Date"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:id="@+id/lastLinear">

        <EditText
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_below="@+id/lblDate"
            android:id="@+id/lblStart"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="38dp"
            android:enabled="false"
            android:background="@color/login"
            android:textColor="#ffffff"
            android:layout_gravity="left"
            android:textAlignment="center"
            android:hint="Start"/>

        <EditText
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_below="@+id/lblDate"
            android:enabled="false"
            android:id="@+id/lblEnd"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="38dp"
            android:background="@color/login"
            android:textColor="#ffffff"
            android:layout_gravity="right"
            android:textAlignment="center"
            android:hint="End"/>
    </LinearLayout>

    <EditText
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_below="@+id/lastLinear"
        android:enabled="false"
        android:id="@+id/lblUploader"
        android:layout_marginTop="10dp"
        android:background="@color/login"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:textAlignment="center"/>

    <EditText
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_below="@+id/lblUploader"
        android:textColor="#ffffff"
        android:enabled="false"
        android:id="@+id/lblContact"
        android:layout_marginTop="5dp"
        android:background="@color/login"
        android:layout_gravity="center"
        android:textAlignment="center"/>

    <Button
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_below="@+id/lblContact"
        android:id="@+id/btnMap"
        android:layout_marginTop="5dp"
        android:background="#c7c7c7"
        android:textColor="#000"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:hint="Location"/>

    <Button
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_below="@+id/btnMap"
        android:id="@+id/btnDelete"
        android:layout_marginTop="5dp"
        android:background="#FF97070C"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:hint="Delete Event"/>

</LinearLayout>
</ScrollView>
