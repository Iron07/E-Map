<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/barcelona"
    tools:context="com.example.ironm.e_map.SignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        android:id="@+id/toplayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:text="Sign Up"
            android:background="#000000"
            android:gravity="center"
            android:textSize="25dp"
            android:id="@+id/txtId"/>

        <EditText
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:id="@+id/txtFName"
            android:layout_marginTop="5dp"
            android:background="@color/login"
            android:inputType="text"
            android:layout_gravity="center"
            android:drawableLeft="@mipmap/user1"
            android:hint="Juan Dela Cruz"
            android:layout_below="@+id/imgLogo"/>

        <EditText
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:id="@+id/txtUser"
            android:layout_marginTop="5dp"
            android:background="@color/login"
            android:inputType="textEmailAddress"
            android:layout_gravity="center"
            android:drawableLeft="@mipmap/user1"
            android:hint="Email Address"
            android:layout_below="@+id/txtFName"/>

        <EditText
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_below="@+id/txtUser"
            android:id="@+id/txtPass"
            android:layout_marginTop="5dp"
            android:background="@color/login"
            android:inputType="textPassword"
            android:layout_gravity="center"
            android:drawableLeft="@mipmap/pass2"
            android:hint="Password"/>

        <EditText
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_below="@+id/txtUser"
            android:id="@+id/txtPass2"
            android:layout_marginTop="5dp"
            android:background="@color/login"
            android:inputType="textPassword"
            android:layout_gravity="center"
            android:drawableLeft="@mipmap/pass2"
            android:hint="Re-type"/>

        <EditText
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_below="@+id/txtPass2"
            android:id="@+id/txtNumber"
            android:layout_marginTop="5dp"
            android:background="@color/login"
            android:inputType="number"
            android:layout_gravity="center"
            android:drawableLeft="@mipmap/num_icon"
            android:hint="Mobile Number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_below="@+id/toplayout"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/back_icon"
            android:id="@+id/btnBack"/>

        <Button
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:background="#000"
            android:layout_marginLeft="10dp"
            android:text="Continue"
            android:textSize="15dp"
            android:id="@+id/btnContinue" />
    </LinearLayout>
</RelativeLayout>
